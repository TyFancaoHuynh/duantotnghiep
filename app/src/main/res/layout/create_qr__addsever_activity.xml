<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.jackty.duan_futurehospital_app.ThuKiCreateQR.view.Thuki_CreateQR_ADDSEVER_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NHẬP THÔNG TIN"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:weightSum="2">
        <EditText
            android:padding="5dp"
            android:background="@drawable/edittext_login_custom"
            android:id="@+id/edt_name_createQR_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập họ và tên" />

        <TextView
            android:id="@+id/tv_name_validate_createQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trống!"
            android:textColor="#ff0000"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <EditText
                android:padding="5dp"
                android:background="@drawable/edittext_login_custom"
                android:id="@+id/edt_date_createQR_"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:hint="Nhập ngày sinh"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <Button
                    android:id="@+id/btnsetdate"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:drawableStart="@drawable/ic_lich"
                    android:background="@color/colorBg"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <EditText
                android:padding="5dp"
                android:background="@drawable/edittext_login_custom"
                android:id="@+id/edt_CMND_createQR_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Nhập số CMND" />
            <TextView
                android:id="@+id/tv_CMND_validate_createQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff0000"
                android:visibility="gone"
                android:text="Trống!"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_date_validate_createQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:text="Trống!"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:padding="5dp"
            android:background="@drawable/edittext_login_custom"
            android:id="@+id/edt_nghenghiep_createQR_"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:hint="Nhập nghề nghiệp"
            />
        <TextView
            android:id="@+id/tv_nghenghiep_validate_createQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:visibility="gone"
            android:text="Trống!"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <EditText
            android:background="@drawable/edittext_login_custom"
            android:id="@+id/edt_diachi_createQR_"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:hint="Nhập địa chỉ" />
        <TextView
            android:id="@+id/tv_diachi_validate_createQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#ff0000"
            android:visibility="gone"
            android:text="Trống!"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_create_QR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo thẻ"
            android:textSize="14sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffffff"

            />
    </LinearLayout>


</LinearLayout>
