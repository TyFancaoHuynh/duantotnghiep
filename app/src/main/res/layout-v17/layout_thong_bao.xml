<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Root container-->
    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/root_container2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <!--View while view is collapsed-->
        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/collapse_viewThongBao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Icon of floating widget -->
            <LinearLayout
                android:id="@+id/collapsed_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:background="@drawable/yta_alert"
                tools:ignore="ContentDescription"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="30dp"
                    android:paddingLeft="13dp"
                    android:layout_width="130dp"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên: "/>
                        <TextView
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nguyễn văn"
                            android:id="@+id/txtTenThongBao"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phòng: "/>
                        <TextView
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="P.A10"
                            android:id="@+id/txtPhongThongBao"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhịp tim: "/>
                        <TextView
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="65"
                            android:id="@+id/txtNhipTimThongBao"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/close_btnThongBao"
                    android:background="@android:color/transparent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>

            <!--Close button-->
            <!--<Button-->

                <!--android:id="@+id/close_btnThongBao"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/ic_launcher"-->
                <!--android:text="Close"-->
                <!--tools:ignore="ContentDescription"/>-->

        </LinearLayout>

    </LinearLayout>
</FrameLayout>